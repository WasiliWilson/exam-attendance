<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="#5C7EB9">

            <TextView
                android:id="@+id/exam_stats_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="EXAMS STATS"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center" />

            <Button
                android:visibility="gone"
                android:id="@+id/logout_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log out"
                android:backgroundTint="#FFFFFF"
                android:textColor="#007BFF" />
        </LinearLayout>

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FACULTY / SCHOOL"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/faculty_school_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SCHOOL OF NATURAL and APPLIED SCIENCE"
                android:background="@drawable/layout3"
                android:textColor="@color/white"
                android:padding="12dp"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DEPARTMENT"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/department_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="COMPUTING DEPARTMENT"
                android:background="@drawable/layout3"
                android:padding="12dp"
                android:textColor="@color/white"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="COURSE NAME"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/course_name_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/layout3"
                android:padding="12dp"
                android:text="SOFTWARE ENGINEERING"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="COURSE CODE"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/course_code_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="COM 311"
                android:background="@drawable/layout3"
                android:padding="12dp"
                android:textColor="@color/white"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="STUDENTS ENROLLED"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/students_enrolled_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="101"
                android:background="@drawable/layout3"
                android:padding="12dp"
                android:textColor="@color/white"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ATTENDED"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/attended_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="82"
                android:background="@drawable/layout3"
                android:padding="12dp"
                android:textColor="@color/white"
                android:layout_marginTop="4dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
