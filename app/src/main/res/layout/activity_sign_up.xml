<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#D9E6F2">

    <!-- Sign Up Title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#5C7EB9"
        android:layout_marginBottom="20dp" />

    <!-- Sign Up Form Container -->
    <LinearLayout
        android:id="@+id/signup_form_container"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/layout1"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="8dp"
        android:layout_gravity="center">

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN UP TO START SESSION"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Email Field -->
        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="EMAIL"
            android:background="@drawable/editor1"
            android:padding="10dp"
            android:textColorHint="@color/gray"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

        <!-- Username Field -->
        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="USERNAME"
            android:textColorHint="@color/gray"
            android:background="@drawable/editor1"
            android:padding="10dp"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

        <!-- Department Field -->
        <EditText
            android:id="@+id/et_department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DEPARTMENT"
            android:textColorHint="@color/gray"
            android:background="@drawable/editor1"
            android:padding="10dp"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

        <!-- Course Code Field -->
        <EditText
            android:id="@+id/et_course_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="COURSE CODE"
            android:textColorHint="@color/gray"
            android:background="@drawable/editor1"
            android:padding="10dp"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

        <!-- Password Field -->
        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PASSWORD"
            android:textColorHint="@color/gray"
            android:inputType="textPassword"
            android:background="@drawable/editor1"
            android:padding="10dp"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

        <!-- Confirm Password Field -->
        <EditText
            android:id="@+id/et_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CONFIRM PASSWORD"
            android:inputType="textPassword"
            android:background="@drawable/editor1"
            android:padding="10dp"
            android:textColorHint="@color/gray"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="fill in all spaces"
            android:textColor="#DA0000"/>
        <!-- Sign Up Button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/btn_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIGN UP"
                android:background="@drawable/button1"
                android:textColor="#FFFFFF"
                android:layout_alignParentEnd="true"
                android:padding="10dp" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
